<launch>
  <!-- Load URDF model -->
  <include file="$(find bebop_description)/launch/description.launch" />

  <!-- Start state estimator node -->
  <!-- <arg name="BAG_FILE" default="origin_angle45_ccw.bag" /> -->
  <!-- <arg name="BAG_ROOT" default="/media/roboticslab/Storege/catkin_ws_bags/Sept052023" /> -->

  <arg name="BAG_FILE" default="exp7.bag" />
  <arg name="BAG_ROOT" default="/media/roboticslab/Storege/bebob2_bag" />
  
  <node name="bebop2_state_estimator" pkg="bebop2_state_estimator" type="bebop2_state_estimator_node.py" output="screen"/>
  <node name="rosbag" pkg="rosbag" type="play" args="--clock $(arg BAG_ROOT)/$(arg BAG_FILE)"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d /home/roboticslab/catkin_ws/src/bebop2_state_estimator/config/bebop2.rviz"/>
</launch>
