<launch>
  <!-- Load URDF model -->
  <include file="$(find bebop_description)/launch/description.launch" />

  <!-- Start state estimator node -->
  <arg name="BAG_FILE" default="2023-08-29-11-56-32.bag" />
  
  <node name="bebop2_state_estimator" pkg="bebop2_state_estimator" type="bebop2_state_estimator_node.py" output="screen"/>
  <node name="rosbag" pkg="rosbag" type="play" args="--clock /media/roboticslab/Storege/bebob2_bag/exp1/$(arg BAG_FILE)"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d /home/roboticslab/catkin_ws/src/bebop2_state_estimator/config/bebop2.rviz"/>
</launch>
